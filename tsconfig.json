{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    // Standard configuration - this works.
    // "module": "esnext",
    // "moduleResolution": "node",
    
    // NodeNext configuration.
    // This, coupled with the `.js` extensions on imports, causes failures.
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
